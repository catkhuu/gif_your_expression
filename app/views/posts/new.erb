<% if @errors %>
  <%= erb :'_errors', layout: false, locals: { errors: @errors } %>
<% end %>

<% if @post %>
<%= erb :'/posts/show', layout: false, locals: { post: @post } %>
<% else %>
  <div class="container">
    <div class="section center-align">
      <div class="row">
        <div class="col s12 m4 18">
          <form class="col s12 new-gif-form" method="post" action="/posts">
            <div class="row">
              <h2 class="center-align">Gif Your Expression</h2>
              <div class="input-field col s6">
                <input id="gif_title" type="text" name="title"class="validate" placeholder="Give your gif a title">
              </div>
              <div class="input-field col s6">
                <input id="user_sentiment" type="text" name="tag"class="validate" placeholder="You feel like...? You like...?">
              </div>
              <button class="btn waves-effect waves-light" type="submit" name="create_post">Submit
                <i class="material-icons right">send</i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% end %>
